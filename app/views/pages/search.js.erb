triggerModal = () => {
 if (<%= @location.present? %>) {
  btn = document.querySelector('#triggersearch');
  form = document.getElementById('search_form');
  form.insertAdjacentHTML('afterbegin', `
    <input type="hidden" name="location" value="<%= @location %>">
  `);
  btn.click();
  };
};

triggerModal();


