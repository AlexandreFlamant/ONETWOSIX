<!-- iteration outside of row -->

<% @combos.sample(3).each do |combo| %>
  <div class="row d-flex align-items-center">
    <div class="col-sm-12 col-md-6">
      <div class="combination">
        <div class="combo-box d-flex justify-content-center align-items-center">
          <div class="combo-card">
            <div class="poster">
              <%= render 'shared/play-button' %>
            </div>
            <div class="combo-card-infos">
            <h6 class="combo-item-name"><%= combo.movie.name %></h6>
            </div>
          </div>

          <div class="plus">
            <div class="y-line">

            </div>
            <div class="x-line">

            </div>
          </div>

          <div class="combo-card">
            <img src="https://peasandcrayons.com/wp-content/uploads/2012/10/homemade-sushi-tutorial-recipe-peas-and-crayons-1250.jpg" />
            <div class="combo-card-infos">
              <% food_type = combo.food_type %>
              <h6 class="combo-item-name"><%= Restaurant.where(food_type: food_type).sample.name %>
              </h6>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-6">
      <div class="index-content">
        <h4><%= combo.name %></h4>
        <p><%= combo.description %></p>
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Select</button>
        <% if user_signed_in? %>
          <div class="job-star">
            <%= link_to like_combo_path(combo), class: "like", method: :put do %>
              <button type="button" class="btn btn-success">Save for Later</button>
              <% combo.get_upvotes.size %>
            <% end %>
          </div>
        <% else %>
          <a href="/users/sign_in" class="btn btn-success">Log in to Save </a>
        <% end %>
      </div>
    </div>

  </div>
<% end %>


<!-- bootstrap popup modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h5 class="text-center">You have Chosen</h5>
        <h5 class="text-center">Eat, Eat, Eat</h5>
        <div class="row d-flex justify-content-center">
          <img src="https://media3.giphy.com/media/3ohhwliPYARsRHK2Aw/giphy.gif" alt="#" style="width: 120px; height:100px">
        </div>
        <h6>You will be redirected to Netflix and Deliveroo in 3 seconds...</h6>
        <div class="row d-flex justify-content-center align-items-center">
          <img src="https://logos-download.com/wp-content/uploads/2016/03/Netflix_logo_n.png" alt="netflix" class="mr-1" style="height:60px">
          <img src="https://s3-eu-west-1.amazonaws.com/tpd/logos/587a5a650000ff00059ac805/0x0.png" alt="deliveroo" class="ml-1" style="height:60px">
        </div>
        <h6>In the meantime, why not share your combo with your friends?</h6>
        <div class="row d-flex justify-content-center align-items-center" id="modal-icons">
          <a href="#"><i class="fab fa-instagram mx-1"></i></a>
          <a href="#"><i class="fab fa-facebook mx-1"></i></a>
          <a href="#"><i class="fab fa-twitter mx-1"></i></a>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success">Save changes</button>
      </div>
    </div>
  </div>
</div>
