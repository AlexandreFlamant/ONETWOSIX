<!-- do iteration instead copy 3 sets of card when the seeds are ready -->
<!-- iteration outside of row -->
<% @combos.sample(3).each do |combo| %>
  <div class="row d-flex align-items-center">
    <div class="col-sm-12 col-md-6">
      <div class="combination">
        <div class="combo-box d-flex justify-content-center align-items-center">
          <div class="combo-card">
            <div class="poster" style="background-image: url('<%= combo.movie.photo_url%>')">
              <%= render 'shared/play-button', combo: combo %>
            </div>
            <div class="combo-card-infos">
            <h6 class="combo-item-name"><%= combo.movie.name %></h6>
            </div>
          </div>

          <div class="plus">
            <div class="y-line">

            </div>
            <div class="x-line">

            </div>
          </div>

          <div class="combo-card">
            <img src="<%= image_path combo.restaurant.photo_url %> " />
            <div class="combo-card-infos">
              <h6 class="combo-item-name"><%= combo.restaurant.name %>
              </h6>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-6">
      <div class="index-content">
        <h4><%= combo.name %></h4>
        <p><%= combo.description %></p>
        <%= link_to select_combo_path(combo), class: "select", method: :put, remote: true do %>
          <button class="btn btn-success" id="select_show">Select</button>
        <% end %>
        <% if user_signed_in? %>
          <div class="job-star">
            <%= link_to like_combo_path(combo), class: "like", method: :put do %>
              <button type="button" class="btn btn-success">Save for Later </button>
            <% end %>
          </div>
        <% else %>
          <a href="/users/sign_in" class="btn btn-success">Log in to Save </a>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
